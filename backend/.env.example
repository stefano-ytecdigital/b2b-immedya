# ============================================================================
# B2B LEDWall Platform - Environment Variables
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://postgres:mypassword@localhost:5432/b2b_ledwall?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/b2b_ledwall?schema=public"

# ============================================================================
# SERVER
# ============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=api

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-change-me-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me-in-production

# Token expiration
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ============================================================================
# GOOGLE OAUTH (Admin Login)
# ============================================================================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ============================================================================
# SALESFORCE
# ============================================================================
# SF OAuth credentials
SALESFORCE_LOGIN_URL=https://login.salesforce.com
SALESFORCE_CLIENT_ID=your-sf-consumer-key
SALESFORCE_CLIENT_SECRET=your-sf-consumer-secret
SALESFORCE_USERNAME=your-sf-username
SALESFORCE_PASSWORD=your-sf-password
SALESFORCE_SECURITY_TOKEN=your-sf-security-token

# Webhook secret for signature validation
SALESFORCE_WEBHOOK_SECRET=your-webhook-secret-key

# Partner sync cron (every 5 minutes)
SALESFORCE_SYNC_CRON="*/5 * * * *"

# ============================================================================
# EMAIL (SMTP)
# ============================================================================
# Gmail example (requires App Password if 2FA enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="B2B LEDWall <noreply@immedya.com>"

# ============================================================================
# PDF GENERATION
# ============================================================================
# Puppeteer options
PDF_TIMEOUT=30000
PDF_HEADLESS=true

# ============================================================================
# FRONTEND URL (for CORS and redirects)
# ============================================================================
FRONTEND_URL=http://localhost:5173

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=debug
